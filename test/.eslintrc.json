{
    "env": {
        "es6": true,
        "browser": true,
        "node": false,
        "mocha": true
    },
    "globals": {
        "spyOn": true,
        "expect": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 8
    },
    "rules": {
        "indent": [ "warn", 4, {
            "SwitchCase": 1
        } ],
        "linebreak-style": [ "error", "unix" ],
        "semi": [ "error", "always" ],
        "no-console": 0
    }
}
